@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/easyui")

    <style type="text/css">
        form div {
            padding: 5px;
            display: inline-block;
        }

        .datagrid-header-row td div{
            text-align: center !important;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div  class="easyui-layout" data-options="fit:true">
        <div data-options="region:'north',split:false,border:false" style="padding:10px;overflow:hidden;background-color:#F2F2F2;">
            <form id="sForm" method="post">
                <div>进度日期：<input class="easyui-datebox"  name="sCreate"  style="width:100px;height:30px;" /> 至 <input class="easyui-datebox" name="eCreate"  style="width:100px;height:30px;" /></div>

                <div><span style="padding-left:12px;">客户名称：</span><input class="easyui-combobox" name="CustomerName" data-options="valueField:'CusId',textField:'CustomerName',url:'/Customer/GetValidCustomers',width:200,height:30,method:'GET'" /></div>

                <div><span style="padding-left:12px;">记录人：</span><input class="easyui-textbox" name="Creator" data-options="width:100,height:30" /></div>

                <div><a href="javascript:void(0)" id="btnSearch" class="easyui-linkbutton" data-options="iconCls:'fa fa-search fa-lg'" onclick="javascript: $('#sForm').submit();" style="width:100px;">查询</a></div>
            </form>
        </div>
        <div data-options="region:'center',border:true" style="padding:10px;">
            <table class="easyui-datagrid" id="vvList"
                   data-options="fit:true,singleSelect:true,fitColumns:true">
                <thead>
                    <tr>
                        <th data-options="field:'CustomerName',width:80,align:'center'">客户名称</th>
                        <th data-options="field:'ItemName',width:50,align:'center'">项目名称</th>
                        <th data-options="field:'StepName',width:50,align:'center'">工作步骤</th>
                        <th data-options="field:'ResultDesc',width:150,align:'center'">进度记录</th>
                        <th data-options="field:'CompletedTime',width:50,align:'center',formatter:fmtDate">完成时间</th>
                        <th data-options="field:'Creator',width:50,align:'center'">记录人</th>
                        <th data-options="field:'CommercialExpense',width:40,align:'center'">业务费用</th>
                        <th data-options="field:'ContractTime',width:50,align:'center',formatter:fmtDate">合同时间</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/easyui")

    <script type="text/javascript">

        $(function () {
            
            init();
        });

        function init() {
            $("#sForm").form({
                url: "/api/Report/GetProgressList/",
                onSubmit: formOnSubmit,
                success: formSuccess
            });


            $("#btnSearch").click();
        }

        function formOnSubmit() {
            return $(this).form('validate');
        }

        function formSuccess(data) {
            if (responseHandle(data)) {
                $("#vvList").datagrid("loadData", []);
                $("#vvList").datagrid("loadData", JSON.parse(data));
            }
        }
    </script>
</body>
</html>
